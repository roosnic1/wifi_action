<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/brown</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/brown_almost_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/brown_almost_dark</item>
        <item name="android:actionModeBackground">@color/brown</item>

        <item name="android:windowBackground">@color/window_back</item>
    </style>
</resources>
